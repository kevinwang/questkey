extends ./layout.jade

block content
  h1= theUser.username
  img(src=theUser.avatarUrl)
  h2 Level #{theUser.level}
  h2 #{theUser.experience} / #{theUser.getExperienceForLevel()} XP
  a(href=theUser.path + "/reward") [Admin] Give user 50 experience

  h2 Quests
  if quests.length > 0
    ul
      each quest in quests
        li
          a(href=quest.path)= quest.title
  else
    p #{theUser.username} has not started any quests.

  h2 Quests You Own
  if ownedQuests.length > 0
    ul
      each quest in ownedQuests
        li
          a(href=quest.path)= quest.title
  else
    p #{theUser.username} is not the owner of any quests.
